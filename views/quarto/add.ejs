<%-include('../cabecalho.ejs')%>
<h1>Adicionar Quarto</h1>
<div>
    <a href="/quarto/lst" class="btn">Listar Quartos</a>
</div>
<div>
    <form method="post">
        <label>Diária:</label>
        <input type="number" step="0.01" name="diaria" required><br>
        
        <label>Número:</label>
        <input type="number" name="numero" required><br>
        
        <label>Capacidade:</label>
        <input type="number" name="capacidade" required><br>
        
        <label>Andar:</label>
        <input type="number" name="andar" required><br>
        
        <label>Tipo de Quarto:</label>
        <select name="tipquarto" required>
            <option value="" disabled selected>SELECIONE</option>
            <% Tipquartos.forEach(function(tipo){ %>
                <option value='<%=tipo._id%>'><%=tipo.nome%></option>
            <% }) %>
        </select><br>

        <button type="submit" class="btn">Cadastrar</button>
    </form>
</div>
<%-include('../rodape.ejs')%>
