<%-include('../cabecalho.ejs')%>
<h1>Editar Serviço</h1>
<div>
    <a href="/servico/lst" class="btn">Listar Serviços</a>
</div>
<div>
    <form method="post">
        <input type="hidden" name="id" value="<%=Servico._id%>">
        
        <label>Descrição:</label>
        <input type="text" name="descricao" value="<%=Servico.descricao%>" required><br>
        
        <label>Valor:</label>
        <input type="number" step="0.01" name="valor" value="<%=Servico.valor%>" required><br>

        <button type="submit" class="btn edit">Atualizar</button>
        <a href="/servico/lst" class="btn">Voltar</a>
    </form>
</div>
<%-include('../rodape.ejs')%>

