<div>
    <a href="/cliente/lst" class="btn">Listar Clientes</a>
</div>
<div>
    <form method="post">
        <input type="hidden" name="id" value="<%=Cliente._id%>">
        
        <label>Nome:</label>
        <input type="text" name="nome" value="<%=Cliente.nome%>" required><br>
        
        <label>Data Nascimento:</label>
        <input type="date" name="dataNascimento" value="<%=Cliente.dataNascimento.toISOString().split('T')[0]%>" required><br>
        
        <label>EndereÃ§o:</label>
        <input type="text" name="endereco" value="<%=Cliente.endereco%>" required><br>
        
        <label>Telefone:</label>
        <input type="text" name="telefone" value="<%=Cliente.telefone%>" required><br>
        
