<%-include('../cabecalho.ejs')%>
<h1>Tipos de Quarto</h1>
<div>
    <form method="post">
        <input type="text" name="filtro" placeholder="Digite o nome do tipo...">
        <button type="submit" class="btn">Pesquisar</button>
    </form>
</div>
<a href="/tipquarto/add" class="btn add">+ Adicionar Tipo</a>
<table>
    <tr>
        <td>Nome</td>
        <td>Descrição</td>
        <td>Imagem</td>
        <td>Ações</td>
    </tr>
    <% for (const tipo of Tipquartos) { %>
    <tr>
        <td><%=tipo.nome%></td>
        <td><%=tipo.descricao%></td>
        <td>
            <% if (tipo.img) { %>
                <img src="<%=tipo.img%>" width="100" height="100" style="object-fit: cover;">
            <% } else { %>
                Sem imagem
            <% } %>
        </td>
        <td>
            <a href="/tipquarto/edt/<%=tipo.id%>" class="btn edit">Editar</a>
            <a href="/tipquarto/del/<%=tipo.id%>" class="btn delete">Excluir</a>
        </td>
    </tr>
    <% } %>
</table>
<%-include('../rodape.ejs')%>
